pipeline {
    agent any

    tools {
        jdk 'JAVA_21'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/username/your-spring-boot-project.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build --no-daemon'
            }
        }

        stage('Run') {
            steps {
                sh '''
                # Jar faylni to'xtatish uchun (agar oldin ishga tushirilgan bo'lsa)
                pkill -f your-application.jar || true

                # Jar faylni fon rejimida ishga tushirish
                nohup java -jar build/libs/your-application.jar --server.port=8080 > app.log 2>&1 &
                '''
            }
        }
    }

    post {
        success {
            echo 'Build va Run muvaffaqiyatli yakunlandi!'
        }
        failure {
            echo 'Xatolik yuz berdi!'
        }
    }
}
